/* pages/teacher/home/home.wxss */

/* 页面容器 */
.page {
  min-height: 100vh;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  padding: 20rpx 32rpx 100rpx;
  box-sizing: border-box;
}

/* ========== 动画定义 ========== */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes scale {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

.animate-fade-in {
  animation: fadeIn 0.6s ease-out;
}

.animate-slide-up {
  animation: slideUp 0.6s ease-out;
}

.animate-scale {
  animation: scale 0.5s ease-out;
}

.animate-bounce {
  animation: bounce 1s ease-in-out;
}

/* ========== 顶部教师信息 ========== */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0 32rpx;
}

.teacher-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.teacher-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.teacher-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
}

.teacher-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.date-badge {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 16rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.date-day {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  line-height: 1;
}

.date-month {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
}

/* ========== 区块样式 ========== */
.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
}

.section-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
}

/* ========== 课程列表 ========== */
.class-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.class-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.3s;
}

.class-item:active {
  transform: scale(0.98);
}

.class-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.class-time-box {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.class-time {
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
}

.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  font-size: 20rpx;
}

.status-tag.completed {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.status-tag.pending {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.status-text {
  color: #fff;
  font-weight: 600;
}

.class-students-count {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
}

.students-num {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
  line-height: 1;
}

.students-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.class-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #111;
  display: block;
  margin-bottom: 8rpx;
}

.class-room {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 16rpx;
}

.class-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #eee;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 6rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

/* 空状态 */
.empty-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 60rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* ========== 统计卡片 ========== */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.stat-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stat-icon-wrapper.blue {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.stat-icon-wrapper.green {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.stat-icon-wrapper.orange {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.stat-icon-wrapper.purple {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.stat-icon {
  font-size: 36rpx;
}

.stat-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* ========== 快捷功能 ========== */
.quick-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.quick-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 12rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s;
}

.quick-item:active {
  transform: scale(0.97);
}

.quick-icon-bg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
}

.quick-icon-bg.purple {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.quick-icon-bg.blue {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.quick-icon-bg.pink {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.quick-icon-bg.green {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.quick-icon {
  font-size: 40rpx;
  color: #fff;
}

.quick-label {
  font-size: 28rpx;
  font-weight: 650;
  color: #111;
}

.quick-desc {
  font-size: 22rpx;
  color: #999;
}

/* ========== 浮动按钮 ========== */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 32rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s;
}

.fab:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 48rpx;
}