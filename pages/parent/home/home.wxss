/* pages/parent/home/home.wxss */

/* 页面容器 */
.page {
  min-height: 100vh;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 20rpx 32rpx 40rpx;
  box-sizing: border-box;
}

/* ========== 动画定义 ========== */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes scale {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

.animate-fade-in {
  animation: fadeIn 0.6s ease-out;
}

.animate-slide-up {
  animation: slideUp 0.6s ease-out;
}

.animate-scale {
  animation: scale 0.5s ease-out;
}

.animate-bounce {
  animation: bounce 1s ease-in-out;
}

/* ========== 顶部家长信息 ========== */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0 32rpx;
}

.parent-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.parent-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.parent-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
}

.parent-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.switch-child {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.switch-icon {
  font-size: 36rpx;
}

/* ========== 孩子信息卡片 ========== */
.child-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
}

.child-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.child-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.child-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #4facfe;
}

.child-details {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.child-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #111;
}

.child-class {
  font-size: 24rpx;
  color: #999;
}

.child-score-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
}

.score-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 4rpx;
}

.score-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  line-height: 1;
}

.child-stats {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.child-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.stat-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #111;
  line-height: 1;
}

.stat-label {
  font-size: 20rpx;
  color: #999;
}

/* ========== 区块样式 ========== */
.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
}

.section-more {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* ========== 评价卡片 ========== */
.evaluation-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
}

.evaluation-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.evaluation-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.evaluation-item:first-child {
  padding-top: 0;
}

.eval-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.eval-course-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.eval-course {
  font-size: 30rpx;
  font-weight: 650;
  color: #111;
}

.eval-time {
  font-size: 22rpx;
  color: #999;
}

.eval-score {
  min-width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.eval-score.excellent {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.eval-score.good {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.eval-score.normal {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.eval-score-num {
  font-size: 24rpx;
  font-weight: 700;
  color: #fff;
}

.eval-comment {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 12rpx;
}

.eval-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.eval-teacher {
  font-size: 22rpx;
  color: #999;
}

.eval-tags {
  font-size: 22rpx;
  color: #4facfe;
}

/* 空状态 */
.empty-state {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 60rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* ========== 成长趋势 ========== */
.time-tabs {
  display: flex;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 6rpx;
  border-radius: 24rpx;
}

.time-tab {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s;
}

.time-tab.active {
  background: rgba(255, 255, 255, 0.9);
  color: #4facfe;
  font-weight: 600;
}

.trend-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 32rpx;
}

.trend-chart {
  margin-bottom: 24rpx;
}

.chart-bars {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 240rpx;
  gap: 12rpx;
}

.chart-bar {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
  min-height: 80rpx;
}

.bar-fill {
  width: 100%;
  background: linear-gradient(to top, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.5));
  border-radius: 12rpx 12rpx 0 0;
  min-height: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.bar-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.trend-summary {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.trend-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.trend-avg {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
}

/* ========== 照片网格 ========== */
.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.photo-item {
  aspect-ratio: 1;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.photo-img {
  width: 100%;
  height: 100%;
}

.photo-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  padding: 12rpx;
}

.photo-date {
  font-size: 20rpx;
  color: #fff;
}

.photo-placeholder {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.photo-placeholder-icon {
  font-size: 48rpx;
  opacity: 0.5;
}

/* ========== 快捷功能 ========== */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.quick-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.quick-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s;
}

.quick-btn:active .quick-icon-wrapper {
  transform: scale(0.95);
}

.quick-icon-wrapper.blue {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.quick-icon-wrapper.pink {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.quick-icon-wrapper.green {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.quick-icon-wrapper.purple {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.quick-icon {
  font-size: 40rpx;
  color: #fff;
}

.quick-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}