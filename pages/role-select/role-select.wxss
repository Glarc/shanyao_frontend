.page {
  min-height: 100vh;
  padding: 48rpx 32rpx 24rpx;
  box-sizing: border-box;
  background: #f7f8fa;
}

.header { margin-bottom: 32rpx; }
.title { font-size: 44rpx; font-weight: 700; color: #111; display: block; }
.subtitle { margin-top: 12rpx; font-size: 26rpx; color: #666; display: block; }

.cards { display: flex; flex-direction: column; gap: 24rpx; }

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.06);
}

.card:active { transform: scale(0.99); }

.cardLeft { display: flex; flex-direction: column; gap: 10rpx; }
.cardTitle { font-size: 34rpx; font-weight: 650; color: #111; }
.cardDesc { font-size: 26rpx; color: #666; line-height: 1.4; }

.arrow { font-size: 44rpx; color: #bbb; }

.footer { margin-top: 40rpx; text-align: center; }
.tip { font-size: 24rpx; color: #999; }
